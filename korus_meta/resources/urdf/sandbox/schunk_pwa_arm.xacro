<?xml version="1.0" ?>
  <robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
    <!-- ************************ Properties ************************* -->
    <xacro:property name="pi" value="3.1415926535897931" />
    <xacro:property name="material_white">
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </xacro:property>
    <xacro:property name="material_orange">
      <material name="orange">
        <color rgba="1.0 0.7 0.0 1"/>
      </material>
    </xacro:property>
    <xacro:property name="material_red">
      <material name="red">
        <color rgba="1.0 0.0 0.0 1"/>
      </material>
    </xacro:property>
    <xacro:property name="material_grey_blue">
      <material name="grey_blue">
        <color rgba="0.4 0.4 1.0 1"/>
      </material>
    </xacro:property>
    <xacro:property name="material_blue">
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1"/>
      </material>
    </xacro:property>
    <xacro:property name="material_green">
      <material name="green">
        <color rgba="0 .8 0 1"/>
      </material>
    </xacro:property>
    <xacro:property name="material_grey">
      <material name="grey">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </xacro:property>
    <xacro:property name="material_black">
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </xacro:property>
  
  <!-- ************************ Arm macro ************************* -->
  <xacro:macro name="schunk_pwa_arm" params="parent">
    <joint name="arm_base_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="arm_base_link"/>
      <origin xyz="-0.075 0.0 0.0" rpy="${pi} ${pi/2} 0"/>
    </joint>  
    <link name="arm_base_link">
	    <visual>
	      <geometry>
	        <cylinder length="0.140" radius="0.093"/>
	      </geometry>
	      <origin xyz="0.0 0.0 0.07" rpy="0 0 0"/>
	      <xacro:insert_block name="material_grey_blue" />
	    </visual>
    </link>

  <joint name="shoulder_roll" type="revolute">
    <parent link="arm_base_link"/>
    <child link="shoulder_roll_link"/>
    <origin xyz="0.0 0.0 0.205" rpy="0 0 0.0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-2.97" upper="2.97" velocity="0.5"/> <!-- +/- 170 deg -->
  </joint>    
  <link name="shoulder_roll_link">
    <visual>  
      <geometry>
        <sphere radius="0.07"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <xacro:insert_block name="material_grey_blue" />
    </visual>   
  </link>

  <joint name="shoulder_pitch" type="revolute">
    <parent link="shoulder_roll_link"/>
    <child link="shoulder_pitch_link"/>
    <origin xyz="0.0 0.0 0.0" rpy="-${pi/2} -${pi/2} 0.0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-2.97" upper="2.97" velocity="0.5"/> <!-- +/- 170 deg -->
  </joint>    
  <link name="shoulder_pitch_link">
    <visual>
      <geometry>
        <cylinder length="0.350" radius="0.03"/>
      </geometry>
      <origin xyz="0.175 0.0 0.0" rpy="0 ${pi/2} 0"/>
      <xacro:insert_block name="material_grey_blue" />
    </visual>
  </link>

  <joint name="elbow_pitch" type="revolute">
    <parent link="shoulder_pitch_link"/>
    <child link="elbow_pitch_link"/>
    <origin xyz="0.350 0.0 0.0" rpy="${pi} 0 ${3*pi/4}"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-2.71" upper="2.71" velocity="0.5"/> <!-- +/- 155 deg -->
  </joint>  
  <link name="elbow_pitch_link">
    <visual>  
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <xacro:insert_block name="material_grey_blue" />
    </visual>  
  </link>
  
  <joint name="elbow_roll_joint" type="revolute">
    <parent link="elbow_pitch_link"/>
    <child link="elbow_roll_link"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 ${pi/2} 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-2.97" upper="2.97" velocity="0.5"/> <!-- +/- 170 deg -->
  </joint>  
  <link name="elbow_roll_link">
    <visual>
      <geometry>
        <cylinder length="0.305" radius="0.03"/>
      </geometry>
      <origin xyz="0.0 0.0 0.1525" rpy="0 0 0"/>
      <xacro:insert_block name="material_grey_blue" />
    </visual>
  </link>  

  <joint name="wrist_pitch_joint" type="revolute">
    <parent link="elbow_roll_link"/>
    <child link="wrist_pitch_link"/>
    <origin xyz="0.0 0.0 0.305" rpy="${pi/4} 0 0"/>
    <axis xyz="1 0 0"/>
    <limit effort="10" lower="-2.44" upper="2.44" velocity="0.5"/> <!-- +/- 140 deg -->
  </joint>
  <link name="wrist_pitch_link">
    <visual>  
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <xacro:insert_block name="material_grey_blue" />
    </visual>  
  </link>
  
  <joint name="wrist_roll_joint" type="revolute">
    <parent link="wrist_pitch_link"/>
    <child link="wrist_roll_link"/>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-2.97" upper="2.97" velocity="0.5"/> <!-- +/- 170 deg -->  
  </joint>
  <link name="wrist_roll_link">
    <visual>
      <geometry>
        <box size="0.1460 0.050 0.0725"/>
      </geometry>
      <origin xyz="0.0 0.0 0.03625" rpy="0 0 0"/>
      <xacro:insert_block name="material_orange" />
    </visual> 
  </link>

  <!-- Endeffector (gripper) -->
  <joint name="gripper_palm_joint" type="fixed">
    <parent link="wrist_roll_link"/>
    <child link="gripper_palm_link"/>
    <origin xyz="0.0 0.0 0.0703" rpy="0.0 -${pi/2} 0.0"/>
  </joint>
  <link name="gripper_palm_link">
  </link>
  
  <!-- center of the volume covered by the fingers -->
