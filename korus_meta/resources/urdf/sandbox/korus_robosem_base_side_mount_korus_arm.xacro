<?xml version="1.0" ?>

<!--  
  == USAGE ==
  
  - loaded into the kinematics node (move_arm.launch).
  - loaded into model viewer (view_model.launch).
  - loaded into robot viewer (view_robot.launch).
  
  == TODO ==
  
   - redo with real parameters later!
   - finish arm visuals
   
  == UPDATE ==
  
  If changing anything here, be sure to:
  
  - yaml/robot/*.yaml (joint name strings)
  - yaml/robot/joints.yaml (joint limits)
  - yaml/mobile_base/diff_drive_base.yaml (wheel name strings, bias, wheel_radius)
  - yaml/mechanisms/gripper,head,stereo_came_tilt.controller (joint name strings)
  - goo/*.yaml (actuator_name strings)
-->
<robot
  xmlns:xacro="http://www.ros.org/wiki/xacro"
  name="korus"
  >

  <!-- ************************** Xacro ************************** -->
  <xacro:property name="pi" value="3.1415926535897931" />
  <xacro:property name="material_white">
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </xacro:property>
  <xacro:property name="material_orange">
    <material name="orange">
      <color rgba="1.0 0.7 0.0 1"/>
    </material>
  </xacro:property>
  <xacro:property name="material_red">
    <material name="red">
      <color rgba="1.0 0.0 0.0 1"/>
    </material>
  </xacro:property>
  <xacro:property name="material_grey_blue">
    <material name="grey_blue">
      <color rgba="0.4 0.4 1.0 1"/>
    </material>
  </xacro:property>
  <xacro:property name="material_blue">
    <material name="blue">
      <color rgba="0.0 0.0 1.0 1"/>
    </material>
  </xacro:property>
  <xacro:property name="material_green">
    <material name="green">
      <color rgba="0 .8 0 1"/>
    </material>
  </xacro:property>
  <xacro:property name="material_grey">
    <material name="grey">
      <color rgba="0.7 0.7 0.7 1.0"/>
    </material>
  </xacro:property>
  <xacro:property name="material_black">
    <material name="black">
      <color rgba="0.1 0.1 0.1 1"/>
    </material>
  </xacro:property>
  <xacro:macro name="wheel" params="name length radius off_x off_y off_z type">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder length="${length}" radius="${radius}"/>
     	  </geometry>
        <origin rpy="0 ${pi/2} 0" xyz="0 0 0"/>
        <material name="black">
          <color rgba="0.1 0.1 0.1 1"/>
        </material>
      </visual>
    </link>
    <joint name="${name}" type="${type}">
      <parent link="base_link"/>
      <child link="${name}"/>
      <origin rpy="0 0 ${pi/2}" xyz="${off_x} ${off_y} ${off_z}"/>
    </joint>
  </xacro:macro>
  
  <!-- ************************** Base *************************** -->
  <link name="base_footprint"></link>
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin rpy="0 0 0" xyz="0.0 0.0 0.075"/>
  </joint>
  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="-0.12 0 0.060"/>
       <geometry>
        <cylinder length="0.22" radius="0.260"/>
      </geometry>
      <xacro:insert_block name="material_white" />
    </visual>
  </link>
  <xacro:property name="front_wheel_bias" value="0.3" />
  <xacro:property name="front_wheel_radius" value="0.075" />
  <xacro:property name="caster_wheel_bias" value="0.2" />
  <xacro:property name="caster_wheel_radius" value="0.040" />
  <xacro:wheel name="wheel_left" length="0.03" radius="${front_wheel_radius}" off_x="0.0" off_y="${front_wheel_bias/2}" off_z="0.0" type="continuous"/>
  <xacro:wheel name="wheel_right" length="0.03" radius="${front_wheel_radius}" off_x="0.0" off_y="-${front_wheel_bias/2}" off_z="0.0" type="continuous"/>
  <xacro:wheel name="caster_left" length="0.02" radius="${caster_wheel_radius}" off_x="-0.24" off_y="${caster_wheel_bias/2}" off_z="-0.035" type="fixed"/>
  <xacro:wheel name="caster_right" length="0.02" radius="${caster_wheel_radius}" off_x="-0.24" off_y="-${caster_wheel_bias/2}" off_z="-0.035" type="fixed"/>

  <!-- ************************** Body ************************** -->

  <joint name="body" type="revolute">
    <parent link="base_link"/>
    <child link="body_link"/>
    <origin rpy="0 0 0" xyz="-0.125 0.0 0.170"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-${pi}" upper="${pi}" velocity="0.013"/>
  </joint>
  <link name="body_link">
    <visual>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.005"/>
       <geometry>
        <cylinder length="0.01" radius="0.260"/>
      </geometry>
      <xacro:insert_block name="material_white" />
    </visual>  
  </link>

  <!-- ************************** upper body ************************** -->
  <joint name="upper_body_joint" type="fixed">
    <parent link="body_link"/>
    <child link="upper_body_link"/>
    <origin rpy="0 0 0" xyz="0  0.125 0.60"/>
  </joint>
  <link name="upper_body_link">
    <visual>
      <geometry>
        <box size="0.2 0.275 0.04" />
      </geometry>
      <origin xyz="0.0 -0.0375 0.02" rpy="0 0 0" />
      <xacro:insert_block name="material_white"/>
    </visual>
  </link>
  
  <!-- ************************** Head ************************** -->
  <joint name="head_joint" type="revolute">
    <parent link="upper_body_link"/>
    <child link="head_link"/>
    <origin rpy="0 0 0" xyz="0  -0.125 0.04"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-${pi/2}" upper="${pi/2}" velocity="0.013"/>
  </joint>
  <link name="head_link">
    <visual>
      <geometry>
        <cylinder length="0.30" radius="0.05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.15"/>
      <xacro:insert_block name="material_white" />
    </visual>  
  </link>
  
  <!-- *********************** Asus Xtion ************************ -->
  <joint name="asus_tilt_joint" type="revolute">
    <parent link="head_link"/>
    <child link="asus_link"/>
    <origin rpy="0 0 -${pi/2}" xyz="0.05 0.0 0.20"/>
    <axis xyz="1 0 0"/>
    <limit effort="10" lower="-${pi/2}" upper="${pi/2}" velocity="0.013"/>
  </joint>
  <link name="asus_link">
    <visual>
      <geometry>
        <box size="0.025 0.15 0.025" />
      </geometry>
      <origin rpy="0 0 ${-pi/2}" xyz="0.0 0.0 0.0"/>
      <xacro:insert_block name="material_orange" />
    </visual>
  </link>

  <!-- ************************ Tablet ************************* -->
  <joint name="tablet_joint" type="fixed">
    <parent link="head_link"/>
    <child link="tablet_link"/>
    <origin rpy="0 0 0" xyz="0.05 0.0 0.30"/>
  </joint>
  <link name="tablet_link">
    <visual>
      <geometry>
        <box size="0.01 0.20 0.15" />
      </geometry>
      <origin rpy="0.0 -${pi/4} 0.0" xyz="0.0 0.0 0.0"/>
      <xacro:insert_block name="material_black" />
    </visual>  
  </link>

  
  <!-- ************************** Arm *************************** -->
  <joint name="torso_turn" type="fixed">
    <parent link="body_link"/>
    <child link="torso_turn_link"/>
    <origin xyz="0.0 0.125 0.005" rpy="0 0 0"/>
<!--     <axis xyz="0 0 1"/> -->
<!--     <limit effort="10" lower="-0.0873" upper="2.2689" velocity="0.5"/> -->
  </joint>
  <link name="torso_turn_link">
    <visual>
      <geometry>
        <cylinder length="0.60" radius="0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
      <xacro:insert_block name="material_white" />
    </visual>
  </link>
  
  <joint name="torso_lift_offset" type="fixed">
    <parent link="torso_turn_link"/>
    <child link="torso_lift_offset_link"/>
    <origin xyz="0 0 0.114" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="torso_lift_offset_link"></link>
  
  <joint name="torso_lift" type="prismatic">
    <parent link="torso_lift_offset_link"/>
    <child link="torso_lift_link"/>
    <origin xyz="0 0 0" rpy="0 0 ${pi/2}"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="0.0" upper="0.16" velocity="0.5"/>
  </joint>  
  <link name="torso_lift_link">
    <visual>
      <geometry>
        <box size="0.2185 0.25 0.13"/>
      </geometry>
      <origin xyz="-0.10925 0.0 0.0" rpy="0 0 0"/>
      <xacro:insert_block name="material_grey_blue" />
    </visual>
  </link>
  


</robot>