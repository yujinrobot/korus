<!--
  Used for visualising the korus robot model.  
  -->
<launch>
  <group ns="korus">
    <param name="robot_description" command="$(find xacro)/xacro.py '$(find korus_meta)/resources/urdf/new_korus_own_arm.urdf.xacro'"/>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/>
    <param name="use_gui" value="true"/>
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find korus_meta)/resources/rviz/view_model_new_korus_own_arm.vcg"/>
  </group>
</launch>
